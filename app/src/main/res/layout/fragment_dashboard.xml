<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<EditText
         android:gravity="top|left"
         android:id="@+id/editWord"

         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:hint="Ilagay ang salita"
         />-->

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes

        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:labelText="Ilagay ang baybayin"
        android:layout_margin="20dp"
        app:primaryColor="#1B5E20"
        app:errorColor="#ddaa00"
        app:helperTextColor="#795548"
        app:panelBackgroundColor="#F7F7F7"

        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/editWord2"
            android:gravity="top|left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="20sp"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <TextView
        android:padding="10dp"
        android:background="#F7F7F7"
        android:id="@+id/txtResult2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:hint="baybayin sa tagalog" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AVLoadingIndicatorView"
        app:indicatorName="BallPulseIndicator"
        android:visibility="invisible"
        app:indicatorColor="@color/colorPrimaryDark"
        />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRANSLATE TO TAGALOG"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_green_background"
        android:id="@+id/btnTranslate2"/>

</LinearLayout>